@using data_access.Data.Entities
@model List<Product>;

<div class="d-flex gap-4 flex-wrap">
    @foreach(var i in Model)
    {  
        <div class="card" style="width: 18rem;">
            <img src="@i.ImageUrl" class="card h-75 d-inline-block" alt="...">

            <div class="card-body d-flex flex-column justify-content-end gap-2">
                <h5 class="card-title">@i.Name</h5>
                <p class="card-text">@i.Description</p>
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@i.Id" >
                    <i class="bi bi-info-lg"></i>
                </a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@i.Id">
                    <i class="bi bi-trash3-fill"></i>
                </a>
            </div>
        </div>
    }
</div>

<samp>Items: @Model.Count</samp>